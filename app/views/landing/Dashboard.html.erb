<div class="landing-page">
  <div class="overlay"></div>
  <div class="container">
    <h1 class="title" style="text-align:center">Welcome to Bus Reservation </h1>
    <div class="sections">
      
      <!-- User Section -->
      <div class="section user-section">
        <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRXZahb8ETYjZ_b3dQEpyHTYgUA1p3OoZLZfarzr1yU6ff8lqQj3cdh6AA&s", alt: "User Icon", class: "icon" %>
        <%= link_to "User Login", new_user_session_path, class: "btn" %>
      </div>

      <!-- Admin Section -->
      <div class="section admin-section">
      <%= image_tag "data:image/png;base64,", 
      alt: "Admin Icon", 
      class: "icon", 
      height: "200px", 
      width: "200px" %>


<%= link_to "Admin Login", "http://localhost:3000/admin/login", class: "btn" %>

      </div>

    </div>
  </div>
</div>

<!-- CSS -->
<style>
  .landing-page {
    position: relative;
    background: url('<%= asset_path("bus3.webp") %>') no-repeat center center;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
  }

  .container {
    position: relative;
    z-index: 2;
  }

  .title {
    font-size: 2.5rem;
    margin-bottom: 20px;
   
  }

  .sections {
    display: flex;
    gap: 50px;
  }

  .section {
    background: rgba(255, 255, 255, 0.2);
    padding: 30px;
    border-radius: 10px;
    backdrop-filter: blur(10px);
  }

  .icon {
    width: 200px;
    height: 200px;
    margin-top: 15px;
    border-radius: 50%;


  }

  .btn {
    display: block;
    padding: 10px 20px;
    background: #ffcc00;
    color: black;
    font-weight: bold;
    text-decoration: none;
    border-radius: 5px;
    transition: 0.3s;
    margin-top:20px;
  }

  .btn:hove