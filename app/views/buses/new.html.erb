<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Panel</title>

  <!-- FontAwesome for icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

  <style>
    /* General Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
      transition: all 0.3s ease-in-out;
    }

    /* Light & Dark Mode Styles */
    body {
      background-color: #f8f9fa;
      color: #343a40;
    }

    body.dark-mode {
      background-color: #1e1e1e;
      color: white;
    }

    /* Sidebar Styles */
    .sidebar {
      width: 250px;
      height: 100vh;
      background: #343a40;
      position: fixed;
      left: -250px; /* Initially hidden */
      top: 0;
      padding: 20px;
      color: white;
      transition: left 0.3s ease-in-out;
      margin-top: 90px;
    }

    .sidebar.show {
      left: 0;
    }

    .sidebar h2 {
      text-align: center;
      font-size: 22px;
      margin-bottom: 20px;
      font-weight: bold;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
    }

    .sidebar ul li {
      padding: 15px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .sidebar ul li a {
      text-decoration: none;
      color: white;
      font-size: 18px;
      display: flex;
      align-items: center;
    }

    .sidebar ul li a i {
      margin-right: 10px;
    }

    .sidebar ul li:hover {
      background: #495057;
      border-radius: 5px;
    }

    /* Content Area */
    .content {
      margin-left: 20px;
      padding: 20px;
      transition: margin-left 0.3s ease-in-out;
    }

    .sidebar.show + .content {
      margin-left: 260px;
    }

    /* Sidebar Toggle Button */
    .sidebar-toggle {
      position: fixed;
      top: 15px;
      left: 15px;
      font-size: 24px;
      cursor: pointer;
      background: black;
      border: none;
      color: yellow;
      padding: 10px;
      border-radius: 5px;
      z-index: 1000;
    }

    /* Dark Mode Toggle Button */
    .dark-mode-toggle {
      font-size: 16px;
      padding: 8px 12px;
      background: #f39c12;
      border: none;
      color: white;
      cursor: pointer;
      border-radius: 5px;
    }

    .dark-mode-toggle:hover {
      background: #e67e22;
    }

    .dark-mode .dark-mode-toggle {
      background: #555;
    }

    /* Navbar Styling */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #343a40;
      padding: 15px 20px;
      color: white;
    }

    .navbar .logo img {
      height: 40px;
    }

    .navbar .right-section {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .navbar .right-section a {
      color: white;
      text-decoration: none;
      font-size: 16px;
    }

    .navbar .right-section a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <h2>Admin Panel</h2>
    <ul>
      <li><a href="http://localhost:3000/buses"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="http://localhost:3000/map/index"><i class="fas fa-map"></i>Ai Map</a></li>
      <li><a href="http://localhost:3000/buses/new"><i class="fas fa-bus"></i> Add Bus</a></li>
      <li><a href="http://127.0.0.1:3000/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      <li><a href="http://localhost:3000/"><i class="fas fa-sign-out-alt"></i> Landing Page</a></li>
      <li><button class="dark-mode-toggle" onclick="toggleDarkMode()">Dark Mode</button></li>
    </ul>
  </div>

  <!-- Sidebar Toggle Button -->
  <button class="sidebar-toggle" id="sidebarToggle">
    ☰
  </button>

 
  <script>
    // Sidebar Toggle Function
    function toggleSidebar() {
      let sidebar = document.getElementById('sidebar');
      let content = document.getElementById('content');
      let toggleBtn = document.getElementById('sidebarToggle');

      if (sidebar.classList.contains('show')) {
        sidebar.classList.remove('show');
        toggleBtn.innerHTML = "☰"; // Show hamburger icon
      } else {
        sidebar.classList.add('show');
        toggleBtn.innerHTML = "✖"; // Show close icon
      }
    }

    document.getElementById('sidebarToggle').addEventListener('click', toggleSidebar);

    // Dark Mode Toggle Function
    function toggleDarkMode() {
      document.body.classList.toggle('dark-mode');
      let btn = document.querySelector('.dark-mode-toggle');
      btn.textContent = document.body.classList.contains('dark-mode') ? "Light Mode" : "Dark Mode";
    }
  </script>

</body>
</html>







