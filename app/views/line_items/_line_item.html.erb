<tr>
  <td><%= line_item.quantity %> &times;</td>
  <td>
    <% if line_item.bus.present? %>
      <%= line_item.bus.name %>
    <% else %>
      <span class="text-danger">Bus Not Found</span>
    <% end %>
  </td>
  <td>
    <% if line_item.bus&.image&.attached? %>
     <%= image_tag line_item.bus.image, 
              height: 200, 
              width: 200, 
              alt: "Bus Image", 
              class: "img-fluid rounded shadow" %>

    <% else %>
      No Image
    <% end %>
  </td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
</tr>
