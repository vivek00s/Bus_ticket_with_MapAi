<div class="password-reset-container">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "password-reset-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <label for="email" class="label">Email</label>
      <div class="input-wrapper">
        <i class="fas fa-user"></i> 
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Send Reset Instructions", class: "submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



