<table>
  <tr>
    <% count = 0 %>
    <% @buses.each do |bus| %>

      <% if (count % 3) == 0 %>
      </tr>
      <tr>
      <% end %>

      <% count += 1 %>

      <% time_difference = distance_of_time_in_words(bus.departure_time, bus.arrival_time) %>

      <td class="bus-card">
        <% if bus.image.attached? %>
          <%= image_tag bus.image, class: "bus-image", alt: "Bus Image" %><br />
        <% end %>

        <h3><%= bus.name %></h3>
        <p class="info"><strong>Source:</strong> <%= bus.source %></p>
        <p class="info"><strong>Destination:</strong> <%= bus.destination %></p>
        <p class="time"><strong>Departure:</strong> <%= bus.departure_time.strftime("%I:%M %p") %></p>
        <p class="time"><strong>Arrival:</strong> <%= bus.arrival_time.strftime("%I:%M %p") %></p>
        <p class="duration"><strong>Duration:</strong> <%= time_difference %></p>
        <p class="price"><strong>Price:</strong> <%= number_to_currency(bus.ticket_amount, unit: "â‚¹", precision: 2) %></p>

        <%= button_to 'Book the Ticket', line_items_path(bus_id: bus.id), method: :post, class: "book-btn" %>
      </td>
    <% end %>
  </tr>
</table>

<style>
/* Table Styling */
table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
  background: #f5f7fa;
  border-radius: 12px;
  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
  padding: 20px;
}

/* Bus Card Styling */
.bus-card {
  padding: 20px;
  text-align: center;
  vertical-align: top;
  border: 1px solid #ddd;
  background: #ffffff;
  border-radius: 12px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.1);
}

/* Hover Effects */
.bus-card:hover {
  transform: scale(1.05);
  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
  background: #e3f2fd;
}

/* Image Styling */
.bus-image {
  width: 130px;
  height: 130px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.2);
}

/* Text Styling */
h3 {
  font-size: 22px;
  color: #007bff;
  margin-bottom: 10px;
}

p {
  font-size: 16px;
  color: #333;
  margin: 6px 0;
}

/* Price & Duration Styling */
.price {
  font-size: 20px;
  font-weight: bold;
  color: #28a745;
}

.duration {
  font-size: 16px;
  font-weight: bold;
  color: #ff9800;
}

.time {
  font-size: 14px;
  color: #6c757d;
}

/* Button Styling */
.book-btn {
  display: inline-block;
  background: #007bff;
  color: white;
  padding: 12px 18px;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
  text-decoration: none;
  font-weight: bold;
}

.book-btn:hover {
  background: #0056b3;
  transform: scale(1.07);
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}
</style>
